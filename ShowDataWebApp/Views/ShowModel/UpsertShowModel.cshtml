@model ShowDataWebApp.Models.ViewModels.ShowModelVM
@{
    var title = "Create Show Model";
}


<form method="post" asp-action="UpsertShowModel" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row px-2 mx-2 backgroundWhite border">
        @if (Model.ShowModel.Id != 0)
        {
            <input type="hidden" asp-for="ShowModel.Id" />
            title = "Edit ShowModel";
        }
        </div>
        <div class="col-12 p-3">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ShowModel.DisplayName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ShowModel.DisplayName" class="form-control" />
                    <span asp-validation-for="ShowModel.DisplayName" class="text-danger"></span>
                </div>
            </div>
            </div>
            <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    DataOverview
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(d => d.ShowModel.DataOverviewId, Model.DataOverviewList,
                    "Please select DataOverview", new { @class = "form-control" })
                    <span asp-validation-for="ShowModel.DataOverviewId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ShowModel.isAvailsable"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ShowModel.isAvailsable" class="form-control" />
                    <span asp-validation-for="ShowModel.isAvailsable" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ShowModel.Image"></label>
                </div>
                <div class="col-8">
                    <input type="file" asp-for="ShowModel.Image" id="dataImage" name="files" multiple class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ShowModel.DisplayDate"></label>
                </div>
                <div class="col-8">
                    @{
                        var someDateSM = "";
                        if (Model.ShowModel.Id != 0)
                        {
                            someDateSM = Model.ShowModel.DisplayDate.ToShortDateString();
                        }
                    }
                    <input id="datePicker" value="@someDateSM" type="text" asp-for="ShowModel.DisplayDate" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn-primary form-control">
                        @(Model.ShowModel.Id!=0?"Update":"Create")
                    </button>
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
        <div class="col-4 text-right" style="width:250px;">
            @if (Model.ShowModel.Image != null)
            {
                var base64 = Convert.ToBase64String(Model.ShowModel.Image);
                var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                <img src="@imgSrc" width="200" />
            }
        </div>


</form>

@section scripts{
    <script>
    $(function () {
        $('#datePicker').datepicker({
            changeMonth: true,
            changeYear: true,
            yearRange: "1500:2020"
        })
    })
    </script>
}